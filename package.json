{
    "name": "hospi",
    "description": "The frontend stack for SaaS companies",
    "private": true,
    "author": "Solsy <solmon@gmail.com>",
    "license": "MIT",
    "homepage": "https://hospi.org/",
    "repository": {
        "type": "git",
        "url": "https://github.com/solmon/hospi"
    },
    "keywords": [
        "hospi"
    ],
    "scripts": {
        "w": "yarn workspace",
        "dev:web": "yarn w hospi-ui dev",
        "dev:palette": "yarn w palette-docs dev",
        "publish:next": "yarn workspaces foreach --from '@hp-ui/*' npm publish --access public --tag next",
        "publish": "yarn workspaces foreach -p --from '@hp-ui/*' npm publish && yarn changeset tag",
        "prepare": "husky install",
        "clean": "turbo run clean",
        "lint": "turbo run lint",
        "lint:staged": "lint-staged --allow-empty --config lint-staged.config.js",
        "create:pkg": "hygen package chakra-component",
        "build:web": "yarn w hospi-ui build",
        "build:tokens": "chakra-cli tokens packages/hp-ui-theme/dist/index.mjs",
        "build:packages": "turbo run build --concurrency=5 --no-deps --continue && yarn build:tokens",
        "clean:packages": "turbo run clean",
        "preinstall": "rm -rf node_modules/odiff-bin"
    },
    "workspaces": [
        "apps/hospi-ui",
        "packages/hp-ui-*",
        "server/hp-srv-*",
        "tooling/next-workspaces",
        "tooling/test-utils",
        "tooling/props-docs"
    ],
    "devDependencies": {
        "@chakra-ui/cli": "^2.4.1",
        "@chakra-ui/react": "^2.6.1",
        "@changesets/cli": "^2.26.1",
        "@clerk/clerk-react": "^3.5.1",
        "@emotion/jest": "^11.11.0",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@jest/types": "^29.5.0",
        "@manypkg/get-packages": "^1.1.3",
        "@swc-node/jest": "^1.6.5",
        "@swc/core": "^1.3.59",
        "@types/node": "^18.16.13",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "browserslist": "^4.21.5",
        "cross-env": "^7.0.3",
        "date-fns": "^2.30.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-storybook": "^0.6.12",
        "framer-motion": "^10.12.12",
        "husky": "^8.0.3",
        "hygen": "^6.2.11",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "jest-watch-typeahead": "^2.2.2",
        "lint-staged": "^13.2.2",
        "lodash": "^4.17.21",
        "node-releases": "^2.0.10",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-is": "^18.2.0",
        "react-test-renderer": "^18.2.0",
        "rimraf": "^4.4.1",
        "ts-node": "^10.9.1",
        "tsup": "^6.7.0",
        "turbo": "^1.9.8",
        "typescript": "^5.0.4",
        "vercel-submodules": "^1.0.10",
        "yup": "^1.1.1",
        "zod": "^3.21.4"
    },
    "resolutions": {
        "unist-util-visit": "4.0.0",
        "react": "18.2.0"
    },
    "packageManager": "yarn@3.5.0"
}
